pipeline {
    agent any
    tools{
	maven 'local mvn'
    }
    stages{
        stage('Build'){
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Start save...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
        stage('Deploy to staging'){
            steps {
		build job:'deploy-to-staging'
	    }
        }
       
        stage('Deploy to production'){
            steps {
                timeout(){
		    input message:'would you like deploy to production'
		}

		build job:'deploy-to-production'
            }
        
	    post {
	        success {
		    echo 'Deploy code to production successfully'
                }
		failure {
		    echo 'Deploy failure'
		}
            }
        }
    }
}
