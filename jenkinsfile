pipeline {
    agent any
    tools{
	maven 'local mvn'
    }
    stages{
        stage('Build'){
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Start save...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
        stage('Deploy to staging')
            steps {
		build job:'deply-to-staging'
	    }
        }
    }
}
